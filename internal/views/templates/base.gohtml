{{define "base"}}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>NeonForum</title>
  <link rel="stylesheet" href="/assets/css/styles.css">
</head>
<body>
<header>
  <div class="container">
    <div style="display:flex;align-items:center;justify-content:space-between;gap:1rem;">
      <div>
        <a class="brand" href="/">NEONFORUM</a>
      </div>
      <nav>
        <a href="/">Home</a>
        {{if .User}}
          <a href="/post/new">New Post</a>
          <a href="/me/posts">My Posts</a>
          <a href="/me/likes">My Likes</a>
          <form class="inline" method="POST" action="/logout"><button class="btn btn-danger">Logout</button></form>
          <span class="small">Signed in as <strong>{{.User.Username}}</strong></span>
        {{else}}
          <a href="/login">Login</a>
          <a href="/register">Register</a>
        {{end}}
      </nav>
    </div>
  </div>
</header>

<main>
  <div class="container">
    {{template "body" .}}
  </div>
</main>

<footer>
  <div class="container small">Made with â™¥, no JavaScript. Neon theme.</div>
</footer>
</body>
</html>
{{end}}
