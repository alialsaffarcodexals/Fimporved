{{define "body"}}
<div class="card">
  <h1>New Post</h1>
  <form method="POST" action="/post/create">
    <label>Title</label>
    <input name="title" required maxlength="2000">
    <label>Content</label>
    <textarea name="content" rows="10" required maxlength="10000"></textarea>
    <div style="margin:.5rem 0;"><strong>Categories</strong></div>
    <div style="display:flex;gap:1rem;flex-wrap:wrap;">
      {{range .Categories}}
        <label class="small"><input type="checkbox" name="cat_{{.ID}}" value="1"> {{.Name}}</label>
      {{end}}
    </div>
    <div style="margin-top:.75rem;"><button class="btn btn-primary">Create</button></div>
  </form>
</div>
{{end}}
